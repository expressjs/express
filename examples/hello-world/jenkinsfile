pipeline {
    agent any

    environment {
        IMAGE_NAME = "hello-world-app"
        CONTAINER_NAME = "hello-staging"
        PORT = "8080"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/prasadbeedam/express.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('examples/hello-world') {
                    sh 'npm install'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('examples/hello-world') {
                    sh 'npm test || true'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('examples/hello-world') {
                    sh "docker build -t $IMAGE_NAME ."
                }
            }
        }

        stage('Deploy to Staging') {
            steps {
                script {
                    sh "docker rm -f $CONTAINER_NAME || true"
                    sh "docker run -d --name $CONTAINER_NAME -p $PORT:8080 $IMAGE_NAME"
                }
            }
        }

        stage('Health Check') {
            steps {
                sh "sleep 5"
                sh "curl --fail http://localhost:$PORT || exit 1"
            }
        }
    }

    post {
        success {
            echo "✅ Deployed successfully!"
        }
        failure {
            echo "❌ Pipeline failed. Investigate logs."
        }
    }
}
